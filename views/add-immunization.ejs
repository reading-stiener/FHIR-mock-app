<!-- Assignment L04-2: Create a new resource - Immunization -->


<%- include('./partials/header.ejs') %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger">
                <%= message %>
            </p>
            <% } %>
                <form class="add-athlete-form" action="" method="post" enctype="json">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Status">Status: </label>
                            <input type="text" class="form-control"  name="Status" id="Status" placeholder="status" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Display">Vaccine description: </label>
                            <input type="text" class="form-control" name="Display" id="Display" placeholder="code-display" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Code-code">Vaccine code:</label>
                            <input type="text" class="form-control" name="Code" id="Code" placeholder="CVX code" required>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Subject">Patient reference:</label>
                            <input type="text" class="form-control" name="Subject" id="Subject" placeholder="Patient ref number" required>
                        </div>
                    </div>
              
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Occurrence">Effective date or period:</label>
                            <input type="datetime" class="form-control" label= "Occurrence" name="Occurrence" id="Occurrence" placeholder="YYYY-MM-DDThh:mm:ss.sss+zz:zz ">
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="Occurrence">Primary Source:</label>
                            <input type="text" class="form-control" label= "Source" name="Source" id="Source" placeholder="boolean ">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Add Immunization</button>
                </form>
    </div>
    </div>
    </body>

    </html>